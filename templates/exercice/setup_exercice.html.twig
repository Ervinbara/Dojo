<article class="exo-border">
  <h3 class="container exercice_title">{{ exercice.title }}</h3>
      <div class="content">
          <div class="slug">
              <img src="{{ vich_uploader_asset(exercice, 'imageFile') }}" alt="fotoh">
              <div class="container exercice_slug">{{ exercice.slug | raw }} <a href="{{path('exercice_show', {'id': exercice.id}) }}" 
                class="btn btn-primary">Lire la suite</a>  
                <a href="{{ path('exercice_like', {'id': exercice.id}) }}" class="btn btn-link js-like">
                  {% if app.user and exercice.isLikedByUser(app.user) %}
                    <i class="fas fa-heart"></i>
                  {% else %}
                    <i class="far fa-heart"></i>
                  {% endif %}
                  
                  <span class="js-likes">{{exercice.likes | length}}</span>
                </a>
              </div> 
          </div>
        </div>
</article>   
<hr>             
