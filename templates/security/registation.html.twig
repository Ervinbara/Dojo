{% extends "base.html.twig" %}

{% block body %}

    <h1>Crée un compte ? </h1>
        
    {{form_start(form)}}


    {{form_row(form.email,{'label':'Adresse email','attr': {'placeholder':"Adresse email ..."} }) }}
    {{form_row(form.username, {'label':'Identifiant','attr': {'placeholder':"Nom d'utilisateur"} } )  }}
    {{form_row(form.password,{'label':'Mot de passe','attr': {'placeholder':"Mot de passe"} }) }}
    {{form_row(form.confirm_password,{'label':'Confirmer le mot de passe', 'attr': {'placeholder':"Veuillez confirmé le mot de passe"} }) }}
<!-- Form start et end : si on veux mettre qqlchose entre les entrée du formulaire (text, photo...-->

    <button type="submit" class="btn btn-primary">Inscription</button>

    {{form_end(form)}}
{% block map %}{% endblock %}    
{% block footer %}{% endblock %}
{% endblock %}

